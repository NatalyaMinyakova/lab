<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
  <div id = "errorExplanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
